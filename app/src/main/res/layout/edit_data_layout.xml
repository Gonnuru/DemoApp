<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditDataActivity">


    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/edittext_style"
        android:hint="@string/student_name"
        android:singleLine="true"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edit_rollNo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_style"
        android:hint="@string/student_rollno"
        android:singleLine="true"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edit_branch"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_style"
        android:hint="@string/student_branch"
        android:singleLine="true"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_style"
        android:hint="@string/student_email"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:textAlignment="center" />


    <Button
        android:id="@+id/edit_UpdateStudent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green_bg"
        android:text="@string/update_student"

        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        android:onClick="update"/>




</LinearLayout>